name:                rifactor
version:             0.1.0.0
homepage:            https://github.com/Knewton/rifactor
synopsis:            AWS Reserved Instance Optimization
description:         Watches over your AWS Reserved Instances making sure they
                     get fully applied to any on-demand instances across all
                     your Amazon accounts.
category:            Network
license:             Apache-2.0
license-file:        LICENSE
author:              Tim Dysinger
maintainer:          tim@dysinger.net
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.22

executable rifactor
  default-language:    Haskell2010
  hs-source-dirs:      src
  main-is:             Main.hs
  ghc-options:         -Wall
  build-depends:       base                 >=4.8 && <4.9
                     , aeson                >=0.8
                     , amazonka             >=0.2.1
                     , amazonka-core        >=0.2.1
                     , amazonka-ec2         >=0.2.1
                     , bytestring           >=0.10
                     , cabal-file-th        >=0.2
                     , conduit              >=1.2
                     , conduit-extra        >=1.1
                     , criterion            >=1.0
                     , git-embed            >=0.1
                     , lens                 >=4.7
                     , monad-control        >=1.0
                     , mtl                  >=2.2
                     , optparse-applicative >=0.11
                     , resourcet            >=1.1
                     , template-haskell     >=2.10
                     , text                 >=1.2
                     , time                 >=1.5
                     , transformers         >=0.4
                     , uuid                 >=1.3

library
  default-language:    Haskell2010
  hs-source-dirs:      src
  ghc-options:         -Wall
  exposed-modules:     Rifactor.Types
                     , Rifactor.Plan
  build-depends:       base                 >=4.8 && <4.9
                     , aeson                >=0.8
                     , amazonka             >=0.2.1
                     , amazonka-core        >=0.2.1
                     , amazonka-ec2         >=0.2.1
                     , bytestring           >=0.10
                     , conduit              >=1.2
                     , conduit-extra        >=1.1
                     , lens                 >=4.7
                     , monad-control        >=1.0
                     , mtl                  >=2.2
                     , resourcet            >=1.1
                     , text                 >=1.2
                     , time                 >=1.5
                     , transformers         >=0.4
                     , uuid                 >=1.3

test-suite test
  default-language:  Haskell2010
  type:              exitcode-stdio-1.0
  hs-source-dirs:    tests
  main-is:           test.hs
  build-depends:     base  >= 4.8
                   , tasty >= 0.10
                   , tasty-ant-xml
                   , tasty-golden
                   , tasty-hspec
                   , tasty-hunit
                   , tasty-quickcheck
                   , tasty-smallcheck
                   , rifactor
